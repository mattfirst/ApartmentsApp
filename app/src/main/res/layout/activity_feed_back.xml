<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapart.ActivityFeedBack"
    android:background="@color/mainFon">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:background="@color/mainFon"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24" />

    <Button
        android:id="@+id/send_feedback"
        android:layout_width="137dp"
        android:layout_height="41dp"
        android:background="@drawable/button"
        android:text="Відправити"
        android:textColor="#FFFFFF"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedback_text"
        app:layout_constraintVertical_bias="0.294" />



    <EditText
        android:id="@+id/feedback_text"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:background="@drawable/button_ram2"
        android:fontFamily="@font/ubuntu_regular"
        android:gravity="top"
        android:hint="@string/type_note_here"
        android:importantForAutofill="no"
        android:includeFontPadding="false"
        android:inputType="textMultiLine"
        android:minHeight="@dimen/_100sdp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/text"
        android:textColorHint="@color/text2"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />
</androidx.constraintlayout.widget.ConstraintLayout>